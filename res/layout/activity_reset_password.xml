<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        >
        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Reset Password"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="18dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative123"
        android:hint="Please write your phone number"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Questions?"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="18dp"
        android:layout_below="@id/find_phone_number"
    />
    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_question"
        android:hint="Where your parent met first time?"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        />
    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_1"
        android:hint="Who is your favorite super hero?"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_2"
        android:text="Verify"
        android:background="@drawable/button"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        />
</RelativeLayout>